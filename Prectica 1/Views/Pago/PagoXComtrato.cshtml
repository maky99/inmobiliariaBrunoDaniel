@{
    ViewData["Title"] = "Lista de Pagos";
}
<div class="text-center">
    <h1 class="display-3">Pagos Rehalizados</h1>
    <table class="table">
        <thead>
            <tr>
                <th>CONCEPTO</th>
                <th>IMPORTE</th>
                <th>FECHA</th>
                <th>ESTADO</th>
                <th>RECIBO N°</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.concepto</td>
                    <td>@item.importe</td>
                    <td>@item.fecha.ToString("dd/MM/yyyy")</td>
                    <td>
                        @switch (item.estado)
                        {
                            case 1:
                                <span>Paga</span>
                                break;
                            case 2:
                                <span>Anulada</span>
                                break;
                        }
                    </td>
                    <td>@item.id_pago</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="mt-3">
        <a href="../Contrato/ContratoIndex" class="btn btn-primary btn-sm">Volver</a>
    </div>





</div>
