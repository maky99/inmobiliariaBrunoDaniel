@{
    ViewData["Title"] = "Lista de Contratos";
}
<div class="text-center">
    <h1 class="display-3">Contratos</h1>
    <div class="mb-3">
        <a asp-action="ContratoNuevo" class="btn btn-success">Nuevo Contrato</a>
    </div>
    <div class="mb-3">
        <!-- Campo de búsqueda -->
        <input type="text" id="inputBusqueda" placeholder="Buscar..." onkeyup="filtrarTabla()">
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>INQUILINO</th>
                <th>DUEÑO</th>
                <th>ESTADO</th>
                <th>DESDE</th>
                <th>HASTA</th>
                <th>MESES</th>
                <th>MONTO</th>
                <th>IMPORTE</th>
                <th>cuotas</th>
                <th>ACCIONES</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.inquilino?.apellido</td>
                    <td>@item.inmueble.dueno?.apellido</td>
                    <td>
                        @if (item.estado == 0)
                        {
                            <span>Vigente</span>
                        }
                        else if (item.estado == 1)
                        {
                            <span>Renovado</span>
                        }
                        else if (item.estado == 2)
                        {
                            <span>algo</span>
                        }
                        else if (item.estado == 3)
                        {
                            <span>Desalojado</span>
                        }
                    </td>
                    <td>@item.desde</td>
                    <td>@item.hasta</td>
                    <td>@item.meses</td>
                    <td>@item.monto</td>
                    <td>@item.pago.importe</td>
                    <td>@item.pago.cantidad_pagos</td>
                    <td>
                        <!-- Enlace para editar -->
                        <a href="#" class="btn btn-primary">
                            <i class="fa-solid fa-pen-to-square"></i> Editar
                        </a>
                        <!-- Enlace para eliminar -->
                        <a href="#" class="btn btn-danger">
                            <i class="fa-solid fa-trash"></i> Eliminar
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
