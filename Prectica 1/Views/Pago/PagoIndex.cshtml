@{
    ViewData["Title"] = "Lista de Pagos";
}
<div class="text-center">
    <h1 class="display-3">Pagos</h1>
    <div class="mb-3">
        <a asp-action="#" class="btn btn-success">Nuevo Contrato</a>
    </div>
    <div class="mb-3">
        <!-- Campo de búsqueda -->
        <input type="text" id="inputBusqueda" placeholder="Buscar..." onkeyup="filtrarTabla()">
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>CONCEPTO</th>
                <th>IMPORTE</th>
                <th>FECHA</th>
                <th>ESTADO</th>
                <th>CONTRATO</th>
                <th>ACCIONES</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model){
            <tr>                
                <td>@item.concepto</td>
                <td>@item.importe</td>
                <td>@item.fecha</td>
                <td>@item.estado</td>
                <td>@item.id_contrato</td>
                <td>
                    <!-- Enlace para editar -->
                    <a href="#" class="btn btn-primary">
                        <i class="fa-solid fa-pen-to-square"></i> Editar
                    </a>
                    <!-- Enlace para eliminar -->
                    <a href="#" class="btn btn-danger">
                        <i class="fa-solid fa-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
